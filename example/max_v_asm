// инициализация массива

lac 0 // размер массива
mult 2
add 1

lrg rg1 // максимальный адрес массива + 1
mov 2
lrg rg2 // текущий адрес массива

// инициализация максимального элемента нулём
mov 0
lrg rg3 // текущий максимальный элемент

// цикл
mov rg1
cmp rg2
jmpg 24
jmpng 44


// получение и сравнение нового с текущим максимальным
lac rg2
lrg rg4 // обрабатываемое новое значение
cmp rg3
jmpng 36

// запись нового максимального числа
mov rg4
lrg rg3


mov rg2
add 2
lrg rg2
jmp 16
nop 0
